<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_laysss"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    
    <RelativeLayout 
        android:id="@+id/pop_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
			    <TextView
			        android:id="@+id/location_tips"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/overlay_popupwindow"
			        android:gravity="center_horizontal"
			        android:text="我的位置:"
			        android:textColor="@android:color/white" />
			
			    <ImageView
			        android:id="@+id/ps"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_below="@+id/location_tips"
			        android:background="@drawable/overlay_mylocation" />
    </RelativeLayout>
</RelativeLayout>